(defvar center-mode-active nil "Tracks whether Center mode is active.")
(defvar center-mode-previous-margins (make-hash-table) "Stores previous window margins.")

(defun center-mode ()
  "Toggles left and right padding to set max of 80 characters per line"
  (interactive)
  (if center-mode-active
      (progn
        ;; Disable Center mode: revert to previous margins
        (set-window-margins nil 
                            (gethash (selected-window) center-mode-previous-margins 0)
                            (gethash (selected-window) center-mode-previous-margins 1))
        (remhash (selected-window) center-mode-previous-margins)
        (setq center-mode-active nil))
    (progn
      ;; Enable Center mode: set new margins
      (let ((window-width (window-width))
            (desired-width 80)
            left-margin right-margin)
        ;; Save current margins
        (puthash (selected-window) (car (window-margins)) center-mode-previous-margins 0)
        (puthash (selected-window) (cdr (window-margins)) center-mode-previous-margins 1)
        ;; Calculate new margins
        (setq left-margin (/ (- window-width desired-width) 2))
        (setq right-margin left-margin)
        ;; Adjust for odd window widths
        (when (> window-width (* 2 left-margin))
          (setq right-margin (1+ right-margin)))
        ;; Set new margins
        (set-window-margins nil left-margin right-margin)
        (setq center-mode-active t)))))

